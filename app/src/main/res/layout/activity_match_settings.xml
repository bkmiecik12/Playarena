<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_match_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.bkmiecik.playarena.Activities.MatchSettingsActivity">
    <TextView
            android:text="Przeciwnik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/sp_guests"
            android:prompt="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Długość połowy"
            android:id="@+id/tv_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <SeekBar
            android:thumbTint="@color/colorPrimaryDark"
            android:progressTint="@color/colorPrimary"
            android:id="@+id/sb_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_players_count"
            android:text="Po ilu gramy?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <SeekBar
            android:id="@+id/sb_players_count"
            android:thumbTint="@color/colorPrimaryDark"
            android:progressTint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Skład"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ListView
            android:id="@+id/lv_squad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:choiceMode="multipleChoice"
            android:layout_weight="1"/>



    <Button
            android:id="@+id/b_pass_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:text="Rozpocznij mecz"/>

</LinearLayout>
