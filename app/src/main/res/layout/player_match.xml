<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            app:layout_collapseMode="parallax"
            app:cardElevation="2dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="12"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_num"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_height="match_parent"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="BartÅ‚omiej Kmiecik"
                        android:textSize="12sp"
                        android:id="@+id/tv_name"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_height="match_parent"/>

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:visibility="gone"
                        android:backgroundTint="@color/greyButton"
                        android:src="@drawable/soccer"
                        android:id="@+id/b_goal"
                        android:scaleType="fitCenter"/>

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:backgroundTint="@color/blueButton"
                        android:src="@drawable/assist"
                        android:id="@+id/b_assist"
                        android:scaleType="fitCenter"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0\n00:00"
                        android:id="@+id/tv_stats"/>

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b_sub_in"
                        android:backgroundTint="#88ff88"
                        android:src="@drawable/ic_arrow_upward_black_24dp"/>
                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:id="@+id/b_sub_out"
                        android:backgroundTint="@color/greyButton"
                        android:src="@drawable/ic_arrow_downward_black_24dp"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>