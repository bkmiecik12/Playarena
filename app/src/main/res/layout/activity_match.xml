<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:design="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_match"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.bkmiecik.playarena.MatchActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                <Chronometer
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Kłosdipns"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="21:37"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="FC Śródmieście Team"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="7"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:padding="2dp"
                        android:backgroundTint="#ffff88"
                        android:src="@android:drawable/ic_media_pause"/>
                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#88ff88"
                        android:src="@android:drawable/ic_input_add"/>
                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#ff8888"
                        android:src="@android:drawable/ic_delete"/>
                <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>
                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#88ff88"
                        android:src="@android:drawable/ic_input_add"/>
                <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:backgroundTint="#ff8888"
                        android:src="@android:drawable/ic_delete"/>

            </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom|center"
            design:menu="@menu/nav_menu"
            />
    </LinearLayout>

</LinearLayout>
